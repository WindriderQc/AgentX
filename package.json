{
  "name": "agentx",
  "version": "1.3.2",
  "description": "Local AI assistant with RAG, conversation memory, prompt versioning, and n8n integration support.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "test": "jest --silent",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --runInBand",
    "test:workflows": "jest tests/workflows",
    "test:e2e": "./test-all.sh",
    "test:e2e:playwright": "npx playwright test",
    "test:e2e:playwright:ui": "npx playwright test --ui",
    "test:e2e:playwright:headed": "npx playwright test --headed",
    "test:e2e:playwright:debug": "npx playwright test --debug",
    "test:e2e:playwright:report": "npx playwright show-report",
    "test:e2e:export-import": "npx playwright test export-import.spec.js",
    "test:e2e:onboarding": "npx playwright test onboarding-wizard",
    "test:e2e:dashboard": "npx playwright test performance-metrics-dashboard",
    "test:e2e:filtering": "npx playwright test advanced-filtering.spec.js --project=chromium",
    "test:e2e:filtering:headed": "npx playwright test advanced-filtering.spec.js --headed --project=chromium",
    "test:e2e:filtering:debug": "npx playwright test advanced-filtering.spec.js --debug --project=chromium",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:load": "./tests/load/run-tests.sh",
    "test:load:basic": "artillery run tests/load/basic-load.yml",
    "test:load:stress": "artillery run tests/load/stress-test.yml",
    "test:load:comprehensive": "artillery run tests/load/comprehensive-load.yml",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "seed:ops": "node scripts/seed-sbqc-ops.js"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@qdrant/js-client-rest": "^1.16.2",
    "ajv": "^8.17.1",
    "bcryptjs": "^3.0.3",
    "connect-mongodb-session": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.2.1",
    "express-session": "^1.18.2",
    "helmet": "^8.1.0",
    "http-proxy-middleware": "^3.0.5",
    "mongoose": "^9.0.1",
    "multer": "^2.0.2",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.10.1",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.0",
    "artillery": "^2.0.27",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^11.0.0",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=18.14.0 || ^20.0.0 || ^21.0.0 || ^22.0.0 || >=23.0.0"
  }
}

# Database Configuration
# Choose database type: 'mongodb' or 'sqlite' (default: mongodb)
DB_TYPE=mongodb

# MongoDB Configuration (used if DB_TYPE=mongodb)
# Use MONGO_URI (primary) or MONGODB_URI (fallback) - both work for consistency
MONGO_URI=mongodb://localhost:27017/agentx

# SQLite Configuration (used if DB_TYPE=sqlite)
SQLITE_PATH=./agentx.db

# Server Configuration
PORT=3080
NODE_ENV=development
SERVER_HOST=localhost

# CORS Configuration (comma-separated origins for production)
# Example: CORS_ORIGINS=http://192.168.2.33:3080,http://192.168.2.12
CORS_ORIGINS=*

# V3: RAG Configuration
OLLAMA_HOST=http://localhost:11434
EMBEDDING_MODEL=nomic-embed-text

# Vector Store Configuration
# Options: 'memory' (default), 'qdrant'
VECTOR_STORE_TYPE=memory

# Qdrant Configuration (only if VECTOR_STORE_TYPE=qdrant)
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=agentx_embeddings

# Authentication Configuration (REQUIRED)
# Generate strong random secrets (min 32 characters)
# Run: node -e "const crypto = require('crypto'); console.log('SESSION_SECRET=' + crypto.randomBytes(32).toString('hex')); console.log('CSRF_SECRET=' + crypto.randomBytes(32).toString('hex')); console.log('AGENTX_API_KEY=' + crypto.randomBytes(32).toString('hex'));"
SESSION_SECRET=change-this-to-a-random-secret-min-32-characters-long
CSRF_SECRET=change-this-to-a-different-random-secret-min-32-characters-long
AGENTX_API_KEY=change-this-to-api-key-for-external-integrations
# API key for programmatic access (n8n, automation tools)
AGENTX_API_KEY=your-secure-api-key-for-automation-access

# Database Configuration
# MongoDB is the only supported database
MONGODB_URI=mongodb://localhost:27017/agentx

# Server Configuration
PORT=3080
HOST=localhost
NODE_ENV=development
SERVER_HOST=localhost

# CORS Configuration (comma-separated origins for production)
# Example: CORS_ORIGINS=http://192.168.2.33:3080,http://192.168.2.12
CORS_ORIGINS=*

# CORS Configuration (comma-separated origins for production)
# Example: CORS_ORIGINS=http://192.168.2.33:3080,http://192.168.2.12
# Leave unset for development (allows all origins)
# CORS_ORIGINS=

# V3: RAG Configuration
OLLAMA_HOST=http://localhost:11434
EMBEDDING_MODEL=nomic-embed-text

# Vector Store Configuration
# Options: 'memory' (default), 'qdrant'
VECTOR_STORE_TYPE=memory

# Qdrant Configuration (only if VECTOR_STORE_TYPE=qdrant)
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=agentx_embeddings

# Authentication Configuration (REQUIRED)
# Generate strong random secrets (min 32 characters)
# Run: node -e "const crypto = require('crypto'); console.log('SESSION_SECRET=' + crypto.randomBytes(32).toString('hex')); console.log('CSRF_SECRET=' + crypto.randomBytes(32).toString('hex')); console.log('AGENTX_API_KEY=' + crypto.randomBytes(32).toString('hex'));"
SESSION_SECRET=change-this-to-a-random-secret-min-32-characters-long
CSRF_SECRET=change-this-to-a-different-random-secret-min-32-characters-long
# API key for programmatic access (n8n, automation tools)
AGENTX_API_KEY=your-secure-api-key-for-automation-access

# DataAPI Tool Server (AgentX -> DataAPI)
# DataAPI must require `x-api-key` for /api/v1/*.
DATAAPI_BASE_URL=http://192.168.2.33:3003
DATAAPI_API_KEY=change-me-long-random

# n8n Integration Configuration
# n8n webhooks for automation workflows
N8N_WEBHOOK_BASE_URL=https://n8n.specialblend.icu/webhook
# API key for n8n to call AgentX endpoints (must match n8n's x-api-key header)
# Generate with: openssl rand -hex 32
N8N_API_KEY=your-secure-n8n-api-key-here
# Optional: Restrict n8n access to LAN only (true/false)
N8N_LAN_ONLY=false
# Webhook timeout for AI operations (milliseconds)
N8N_WEBHOOK_TIMEOUT_MS=120000

# n8n Webhook IDs (optional - specific webhook endpoints)
N8N_WEBHOOK_RAG_INGEST=rag-ingest-webhook-id
N8N_WEBHOOK_CHAT_COMPLETE=chat-complete-webhook-id
N8N_WEBHOOK_ANALYTICS=analytics-webhook-id
N8N_WEBHOOK_GENERIC=generic-webhook-id

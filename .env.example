# Database Configuration
# Choose database type: 'mongodb' or 'sqlite' (default: mongodb)
DB_TYPE=mongodb

# MongoDB Configuration (used if DB_TYPE=mongodb)
MONGO_URI=mongodb://localhost:27017/agentx

# SQLite Configuration (used if DB_TYPE=sqlite)
SQLITE_PATH=./agentx.db

# Server Configuration
PORT=3080

# V3: RAG Configuration
OLLAMA_HOST=http://localhost:11434
EMBEDDING_MODEL=nomic-embed-text

# Vector Store Configuration
# Options: 'memory' (default), 'qdrant'
VECTOR_STORE_TYPE=memory

# Qdrant Configuration (only if VECTOR_STORE_TYPE=qdrant)
QDRANT_HOST=http://localhost:6333
QDRANT_COLLECTION=agentx_documents

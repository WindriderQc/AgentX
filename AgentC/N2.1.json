{
  "name": "SBQC - N2.1 NAS File Scanner (Daily 2AM)",
  "nodes": [
    {
      "parameters": {
        "rule": {
          "interval": [
            {
              "field": "cronExpression",
              "expression": "0 2 * * *"
            }
          ]
        }
      },
      "id": "Cron2am",
      "name": "Schedule (Daily 2AM)",
      "type": "n8n-nodes-base.scheduleTrigger",
      "typeVersion": 1.2,
      "position": [-400, 0]
    },
    {
      "parameters": {
        "method": "POST",
        "url": "http://192.168.2.33:3003/api/v1/storage/scan",
        "authentication": "genericCredentialType",
        "genericAuthType": "httpHeaderAuth",
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "{\n  \"roots\": [\"/mnt/media\", \"/mnt/datalake\"],\n  \"extensions\": [\"mp4\",\"mkv\",\"avi\",\"mov\",\"mp3\",\"flac\",\"wav\",\"jpg\",\"jpeg\",\"png\",\"gif\",\"webp\",\"pdf\",\"txt\",\"md\"],\n  \"batch_size\": 1000,\n  \"compute_hashes\": true,\n  \"hash_max_size\": 104857600\n}",
        "options": {
          "timeout": 15000
        }
      },
      "id": "TriggerScan",
      "name": "Trigger DataAPI Scanner",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [-150, 0],
      "credentials": {
        "httpHeaderAuth": {
          "id": "PIrrA2wpOppzVodi",
          "name": "Header Auth account"
        }
      },
      "notesInFlow": true,
      "notes": "DataAPI handles the actual file scanning, batching, and MongoDB inserts"
    },
    {
      "parameters": {
        "method": "POST",
        "url": "http://192.168.2.33:3003/integrations/events/n8n",
        "authentication": "genericCredentialType",
        "genericAuthType": "httpHeaderAuth",
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "=JSON.stringify({\n  \"workflow_id\": \"SBQC-N2.1-nas-scan\",\n  \"event_type\": \"scan_triggered\",\n  \"data\": {\n    \"scan_id\": $json.data?.scan_id || $json.scan_id,\n    \"roots\": $json.data?.roots || [],\n    \"triggered_at\": new Date().toISOString()\n  }\n})",
        "options": {
          "timeout": 10000
        }
      },
      "id": "LogEvent",
      "name": "Log scan_triggered event",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [100, 0],
      "continueOnFail": true,
      "credentials": {
        "httpHeaderAuth": {
          "id": "PIrrA2wpOppzVodi",
          "name": "Header Auth account"
        }
      }
    }
  ],
  "connections": {
    "Cron2am": {
      "main": [
        [
          {
            "node": "TriggerScan",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "TriggerScan": {
      "main": [
        [
          {
            "node": "LogEvent",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "settings": {
    "executionOrder": "v1"
  },
  "staticData": null,
  "tags": [
    {
      "name": "SBQC",
      "id": "sbqc"
    },
    {
      "name": "Priority-2",
      "id": "p2"
    }
  ],
  "meta": {
    "templateCredsSetupCompleted": true
  }
}
